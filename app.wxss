page {
  background-color:  #e0e9ed;
}

text {
  font-family: MicroSoft Yahei, Helvetica, Arial, KaiTi, sans-serif;
  color: #666;
  font-size: 28rpx;
  line-height: 56rpx;
} 

.text_delete {
  text-decoration: line-through;
}

.text_title {
  font-weight: bold;
  font-size: 30rpx;
}

.text_sub_title {
  text-decoration: underline;
  font-size: 22rpx;
  font-weight: bold;
}

.text_split {
  display: block;
  width: 100%;
  height: 12rpx;
  margin: 12rpx 0;
  border-bottom: 1px dashed #ccc;
}

