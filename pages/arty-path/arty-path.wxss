/* pages/arty-path/arty-path.wxss */
.swipper {
  height: 450rpx;
}
.swipper image {
  width: 100%;
}

/* 内容部分 */
.content {
  display: flex;
  flex-direction: row;
  padding: 10rpx 30rpx 0 10px;
  position: relative;
}

/* 时间轴 */
.time_line {
  flex: 0 0 10px;
  width: 10px;
  border-left: 4rpx dashed #81b2f7;
}

/* 引言介绍 */
.intro {
  /* margin-top: 14rpx; */
  /* border: 2rpx solid #ccc; */
  /* padding: 18rpx 18rpx; */
  margin-bottom: 14rpx;
}

/* type_title统一设置 */
 
.intro_title::before {
  display: inline-block;
  width: 12px;
  height: 12px;
  background-color: #bab5fb;
  content: "";
  position: absolute;
  left: 5px;
  border-radius: 50%;
}  

.intro .intro_content {
  border-radius: 20rpx;
  background-color: #d9e0e6; 
  box-shadow: 1rpx 2rpx 5rpx #999;
}

.intro text {
  color: #333;
  /* font-weight: bold; */
  font-family: KaiTi, MicroSoft Yahei, Arial, Helvetica, sans-serif;
}

.intro .title {
  display: block;
  font-size: 36rpx;
  margin: 28rpx 0 14px;
}

.intro .intro_content {
  display: block;
}

.summary_content {
  display: flex;
  flex-direction: column;
  margin-top: 16rpx;
}

.summary_content .type_title {
  display: block;
  font-size: 28rpx;
  font-weight: normal;
  color: #666;
}

.summary_content .type_title::before {
  display: inline-block;
  width: 12px;
  height: 12px;
  background-color: #a8c3e4;
  content: "";
  position: absolute;
  left: 5px;
  margin-top: 10rpx;
  border-radius: 50%;
} 

.summary_content_type {
  display: flex;
  flex-direction: column;
}

.item_list {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
}

.item_list .item_text {
  display: flex;
  flex-direction: column;
}

.item_list .item_text .item_title {
  font-size: 36rpx;
  line-height: 36rpx;
  padding: 14rpx 0;
  color: #333;
}

.item_list .item_text .sub_title {
  color: #999;
}

.item_list .item_text .item_title.normal {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* max-width: 750rpx; */
  /* white-space: nowrap;    */
}

.item_list .item {
  display: flex;
  justify-content: space-between;
  max-height: 240rpx;
  margin-bottom: 20rpx;
  padding: 18rpx 18rpx;
  border-radius: 20rpx;
  background-color: #d9e0e6; 
  box-shadow: 1rpx 2rpx 5rpx #999;
  overflow: hidden;
}

.item_list .item:last-child {
  margin-bottom: 0;
}

/* 框元素图片部分 */
.item_list .item .item_image_wrapper {
  flex: 0 0 240rpx;
  width: 240rpx;
  min-height: 160rpx;
  /* height: 100%; */
  margin-left: 30rpx;
}

.item_image_wrapper image {
  width: 100%;
  height: 100%;
}

text {
  padding-left: 10rpx;
  line-height: 48rpx;
}

.text_list {
  display: flex;
  flex-direction: column;
  margin: 0 40rpx;
  font-size: 24rpx;
}

.text_link {
  color: #365971;
}

.text_link.spot_link {
  color: #5ea5fc;
}